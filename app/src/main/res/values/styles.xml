<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text" parent="android:TextAppearance">
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="Text.xSmall">
        <item name="android:textSize">@dimen/xSmall_text</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="Text.Big">
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="HintTextStyle" parent="Text">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/cloudyBlue</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonTextStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="ButtonRoundedStyle" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/text_big</item>
        <!--<item name="android:background">@null</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/cloudyBlue</item>
    </style>

    <style name="EditTextPhoneStyle" parent="EditTextStyle">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">13</item>
    </style>


    <style name="ToolbarTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
